        "colab": {
          "base_uri": "https://localhost:8080/",
          "height": 54
        }
      },
      "source": [
        "# Split texts by ' '\n",
        "tokenized_texts = [text.split() for text in texts]\n",
        "tokenized_texts"
      ],
      "execution_count": 0,
      "outputs": [
        {
          "output_type": "execute_result",
          "data": {
            "text/plain": [
              "[['I', 'study', 'Computer', 'Science', 'at', 'university'],\n",
